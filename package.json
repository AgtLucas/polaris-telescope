{
  "name": "polaris-telescope",
  "description": "Access Shopify Polaris from Sketch to speed up your design or development workflow",
  "version": "0.9.4",
  "engines": {
    "sketch": ">=3.0"
  },
  "skpm": {
    "name": "polaris-telescope",
    "manifest": "src/manifest.json",
    "main": "polaris-telescope.sketchplugin"
  },
  "resources": [
    "resources/webview.js"
  ],
  "repository": {
    "url": "https://github.com/Shopify/polaris-telescope"
  },
  "scripts": {
    "build": "skpm-build",
    "watch": "skpm-build --watch",
    "postinstall": "yarn run build && skpm-link"
  },
  "devDependencies": {
    "@skpm/builder": "^0.5.4",
    "@skpm/extract-loader": "^2.0.2",
    "algoliasearch": "^3.26.0",
    "css-loader": "^0.28.11",
    "eslint": "^4.19.1",
    "eslint-plugin-shopify": "^21.0.1",
    "html-loader": "^0.5.5",
    "node-sass": "^4.8.3",
    "prop-types": "^15.6.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "sass-loader": "^7.0.1",
    "style-loader": "^0.21.0"
  },
  "dependencies": {
    "sketch-module-web-view": "^0.2.6"
  }
}
